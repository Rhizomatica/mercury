# Mercury HF Modem Configuration File
# Lines starting with # are comments
# Format: key=value (no spaces around =)

[Connection]
# Maximum number of connection attempts before giving up
MaxConnectionAttempts=15

# Timeout for initial connection attempt (milliseconds)
ConnectionTimeoutMs=15000

# Overall link timeout (milliseconds)
LinkTimeoutMs=30000

# Packet ACK timeout for data (milliseconds)
AckTimeoutDataMs=1000

# Packet ACK timeout for control messages (milliseconds)
AckTimeoutControlMs=1000

# Number of retries per packet
PacketRetries=3

[Network]
# TCP control port (Winlink default: 7002)
ControlPort=7002

# TCP data port (usually control port + 1)
DataPort=7003

[Audio]
# Audio system: dsound, wasapi (Windows), alsa, pulse (Linux)
AudioSystem=dsound

# Audio capture device (use "default" or device name from mercury.exe -z)
# Examples:
#   CaptureDevice=default
#   CaptureDevice=Microphone (USB Audio CODEC )
CaptureDevice=default

# Audio playback device (use "default" or device name from mercury.exe -z)
# Examples:
#   PlaybackDevice=default
#   PlaybackDevice=Speakers (USB Audio CODEC )
PlaybackDevice=default

[Radio]
# Radio type: stockhf, sbitx
RadioType=stockhf

# Initial modulation mode (0-16)
# 0 = 84 bps (slowest, most robust)
# 1 = 169 bps (recommended default)
# 5 = 509 bps (good conditions)
# 16 = 5735 bps (excellent conditions)
InitialMode=1

# Enable adaptive speed selection (gearshift)
# true = automatically adjust speed based on conditions
# false = stay at InitialMode (recommended for first tests)
GearshiftEnabled=false

# Gearshift algorithm: snr_based, success_based
GearshiftAlgorithm=success_based

# Gearshift up threshold (success rate percentage)
GearshiftUpThreshold=70

# Gearshift down threshold (success rate percentage)
GearshiftDownThreshold=45

[Advanced]
# PTT on delay (milliseconds)
PttOnDelayMs=10

# PTT off delay (milliseconds)
PttOffDelayMs=200

# FIFO buffer sizes (bytes)
FifoTxBufferSize=128000
FifoRxBufferSize=128000
FifoBackupBufferSize=128000

# Number of data messages in batch
DataBatchSize=5

# Maximum number of messages
MaxMessages=20
